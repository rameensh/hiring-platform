<!DOCTYPE html>
<html lang="en">

<head>

	<meta charset="utf-8">
	<title>Profile | Job Finder</title>
	<link rel="icon" type="image/svg" href="/img/favicon.svg">

	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

	<link rel="stylesheet" href="/css/style.css">
	<link rel="stylesheet" href="/css/colors/green.css" id="colors">

</head>

<body>
	<div id="wrapper">

		<header>
			<div class="container">
				<div class="sixteen columns">

					<!-- Logo -->
					<div id="logo">
						<h1><a href="/"><img src="/img/logo.png" alt="Job Finder" /></a></h1>
					</div>

					<!-- Menu -->
					<nav id="navigation" class="menu">
						<ul id="responsive">

							<li><a href="/">Home</a></li>

							<li><a href="#">Browse Categories</a>
								<ul>
									<li><a href="/job/browse/Consultants">Accountants & Consultants</a></li>
									<li><a href="/job/browse/Automotive">Automotive</a></li>
									<li><a href="/job/browse/Developers">Developers</a></li>
									<li><a href="/job/browse/Designers">Designers & Creatives</a></li>
									<li><a href="/job/browse/Healthcare">Healthcare</a></li>
									<li><a href="/job/browse/Teaching">Teaching</a></li>
									<li><a href="/job/browse/Logistics">Logistics</a></li>
									<li><a href="/job/browse/Customer Service Agents">Customer Service Agents</a></li>
									<li><a href="/job/browse/Sales Experts">Sales & Marketing Experts</a></li>
									<li><a href="/job/browse/Social Cause">Social Cause</a></li>
									<li><a href="/job/browse/Business Development">Business Development</a></li>
									<li><a href="/job/browse/Food Service">Food Service</a></li>
									<li><a href="/job/browse/Writers">Writers</a></li>
									<li><a href="/job/browse/Layman Hiring">Layman Hiring</a></li>
								</ul>
							</li>

							<li><a href="#">For Employers</a>
								<ul>
									<li><a href="/organization/login">Login</a></li>
									<li><a href="/organization/register">Register</a></li>
								</ul>
							</li>

							<% if(typeof(email)!='undefined' ){ %>
								<li><a href="/job/applied">My Applications</a></li>
								<li id="current"><a href="/my-profile">My Profile</a></li>
								<% } %>
						</ul>

						<% if(typeof(email)=='undefined' ){ %>
							<ul class="float-right">
								<li><a href="/register"><i class="fa fa-user"></i> Register</a></li>
								<li><a href="/login"><i class="fa fa-lock"></i> Log In</a></li>
							</ul>
							<% } else { %>
								<ul class="float-right">
									<li><a href="/logout"><i class="fa fa-sign-out"></i> Logout</a></li>
								</ul>
								<% } %>

					</nav>

					<!-- Navigation -->
					<div id="mobile-navigation">
						<a href="#menu" class="menu-trigger"><i class="fa fa-reorder"></i> Menu</a>
					</div>

				</div>
			</div>
		</header>

		<div class="clearfix"></div>

		<div id="titlebar">
			<div class="container">

				<div class="sixteen columns">
					<h2><i class="fa fa-user"></i> My Profile</h2>
				</div>

			</div>
		</div>

		<div class="container">

			<!-- Submit Page -->
			<div class="sixteen columns">
				<div class="submit-page">

					<form method="post" action="/my-profile">

						<!-- Email -->
						<div class="form">
							<h5>Your Name</h5>
							<input class="search-field" name="name" type="text" placeholder="Your full name"
								value="<%= user.name %>" required />
						</div>

						<!-- Email -->
						<div class="form">
							<h5>Your Email</h5>
							<input class="search-field" name="email" type="email" placeholder="mail@example.com"
								value="<%= user.email %>" required />
						</div>

						<!-- Email -->
						<div class="form">
							<h5>Your Phone Number</h5>
							<input class="search-field" name="phone" type="text" maxlength="10"
								value="<%= user.phone %>" required />
						</div>

						<!-- Add URLs -->
						<div class="form with-line">
							<h5>Skills</span></h5>
							<div class="form-inside">

								<div class="form boxed box-to-clone url-box">
									<a href="#" class="close-form remove-box button"><i class="fa fa-close"></i></a>
									<select name="skills[]" style="height: 50px; padding: 12px;">
										<option value="">
											Select Skill
										</option>
										<% if(skills.length !=0){ %>
											<% skills.forEach(function(skill){ %>
												<option value="<%= skill %>">
													<%= skill %>
												</option>
												<% }) %>
													<% } %>
									</select>
									<div class="clearfix"></div>
								</div>
									<% if(user.skills != null) { 
										var skills=user.skills.split(', ');
											skills.forEach(function(skill){
									%>
									<div class="form boxed url-box">
										<a href="#" class="close-form remove-box button"><i class="fa fa-close"></i></a>
										<select name="skills[]" style="height: 50px; padding: 12px;">
											<option value="<%= skill %>">
												<%= skill %>
											</option>
										</select>	
										<div class="clearfix"></div>
									</div>
									<% }) } %>
									

								<a href="#" class="button gray add-url add-box"><i class="fa fa-plus-circle"></i> Add
									Skill</a>
							</div>
						</div>

						<div class="divider margin-top-0 padding-reset"></div>
						<button type="submit" class="button big margin-top-5">Update <i
								class="fa fa-arrow-circle-right"></i></button>
					</form>
				</div>
			</div>

		</div>

		<div class="margin-top-60"></div>

		<div id="backtotop"><a href="#"></a></div>

	</div>
	<!-- Wrapper / End -->

	<script src="/scripts/jquery-2.1.3.min.js"></script>
	<script src="/scripts/custom.js"></script>
	<script src="/scripts/jquery.superfish.js"></script>
	<script src="/scripts/jquery.themepunch.tools.min.js"></script>
	<script src="/scripts/jquery.themepunch.revolution.min.js"></script>
	<script src="/scripts/jquery.themepunch.showbizpro.min.js"></script>
	<script src="/scripts/jquery.flexslider-min.js"></script>
	<script src="/scripts/chosen.jquery.min.js"></script>
	<script src="/scripts/jquery.magnific-popup.min.js"></script>
	<script src="/scripts/waypoints.min.js"></script>
	<script src="/scripts/jquery.counterup.min.js"></script>
	<script src="/scripts/jquery.jpanelmenu.js"></script>
	<script src="/scripts/stacktable.js"></script>

</body>

</html>